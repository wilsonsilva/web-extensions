{
  "name": "web-extensions",
  "version": "0.2.0",
  "description": "In-memory API for Web Extensions",
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack --watch",
    "clean": "rm -rf ./lib",
    "build": "yarn webpack --env build",
    "lint": "eslint src",
    "qa": "yarn eslint src && yarn flow && yarn jest",
    "test-ci": "yarn flow && yarn jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilsonsilva/web-extensions.git"
  },
  "author": "Wilson Silva",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wilsonsilva/web-extensions/issues"
  },
  "homepage": "https://github.com/wilsonsilva/web-extensions#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-standard": "^1.4.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.53.1",
    "flow-remove-types": "^1.2.1",
    "jest": "^20.0.4",
    "jest-flow-transform": "^1.0.1",
    "remove-flow-types-loader": "^1.0.0",
    "webpack": "^3.5.4"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
